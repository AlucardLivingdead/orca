# Ensure that the correct packages are in the system's module search
# path

import os, sys

# Orca i18n

from orca_i18n import _

sys.path.insert (0, "@PYTHON_PKGDIR@")
sys.path.insert (0, "@PYTHON_PKGDIR@/orca")
sys.path.insert (0, "@PYTHON_PKGDIR@/gtk-2.0")

# Add the user's personal .orca directory

orcadir = os.path.join (os.environ["HOME"], ".orca")
sys.path.insert (0, orcadir)

# Setup orca

import orca
import speech

orca.init ()
speech.say ("default", _("Welcome to Orca."))
orca.start ()
