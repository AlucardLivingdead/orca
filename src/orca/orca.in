# Set the user's $PATH for this script.
#
PATH="${PATH}@PLATFORM_PATH@"
export PATH

# Save the arguments away.
#
ARGS="$*"

runOrca()
{
    exec_prefix=@prefix@
    PYTHONPATH=${PYTHONPATH}:@pyexecdir@
    export PYTHONPATH
    @PYTHON@ -c "import orca.orca; orca.orca.main()" "$ARGS"
}

runOrca
