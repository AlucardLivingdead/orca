"""The script to run to start orca.  Loads the user's ~/.orca/settings.py
(if it exists) and then runs orca.
"""

import os, sys
from orca.orca_i18n import _

# Grab the user's ~/.orca/settings.py ahead of the default settings.py.
# If the ~/.orca.settings.py does not exist, then orca will default to
# the settings.py in this directory.
#
userprefs = os.path.join (os.environ["HOME"], ".orca")
sys.path.insert (0, userprefs)

import orca.orca as orca

orca.init ()
orca.start ()
